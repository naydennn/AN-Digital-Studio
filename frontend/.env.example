# Server-only (never exposed to client)
WORDPRESS_GRAPHQL_URL=https://yourdomain.com/graphql

# SMTP — used by the contact form API route (server-only, never exposed to client)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_smtp_username
SMTP_PASS=your_smtp_password_or_app_password
SMTP_FROM="AN Digital Studio <contact@andigital.bg>"
CONTACT_RECIPIENT=contact@andigital.bg

# Google reCAPTCHA — server-side secret key (for token verification)
RECAPTCHA_SECRET_KEY=your_recaptcha_secret_key

# Google reCAPTCHA — site key (passed server-side to the contact form)
RECAPTCHA_SITE_KEY=your_recaptcha_v2_site_key

# WordPress REST API base URL (used server-side if needed)
WORDPRESS_API_URL=https://yourdomain.com
